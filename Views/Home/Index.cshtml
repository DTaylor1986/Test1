@model IndexViewModel

<div class="row">
    <div class="col-3">
        <h4>Categories</h4>
        <ul>
            @foreach(string cat in Model.Categories){
                <li class="btn btn-primary btn-sm">@cat</li>
            }
        </ul>
        <form asp-controller="Home" asp-action="Random" method="POST">
            <div class="form-group">
                <label asp-for="NumJokes"></label>
                <input asp-for="NumJokes" class="form-control"/>
            </div>
            <div class="form-group">
                <Label>There are a total of @ViewBag.Total jokes, pick one:</Label>
                <input asp-for="PickID" max="@ViewBag.Total" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Get Jokes</button>
        </form>
    </div>
    <div class="col-9">
        @await Component.InvokeAsync(nameof(Joke), @Model.Jokes)      
    </div>            
</div>